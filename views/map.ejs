<!DOCTYPE html>
<html>
<head>
    <title>Welcome to Food Hunter</title>

    <script src='https://api.tiles.mapbox.com/mapbox.js/v2.1.2/mapbox.js'></script>
    <link href='https://api.tiles.mapbox.com/mapbox.js/v2.1.2/mapbox.css' rel='stylesheet' />
    
    <link rel="stylesheet" href="/stylesheets/map.css">
    <script type="text/javascript" src="/javascripts/map.js"></script>

</head>
<body>
    
    <h1>Food Hunter</h1>
    <h2>Logged in as <%=kerberos%> <a href="/logout">(Logout)</a></h2>
    
    <div id="my_events_container">
        <h2>My Events</h2>
        <ul>
        </ul>
    </div>
    <div id="map_container">
        <div id="map_slider"></div>
        <div id="map"></div>
    </div>
    <div id="add_event_container">
        <h2>Add event</h2>
        <form id="form_add_event">
            <p>Date: <input type="text" name="date">
            Start time: <input type="text" name="time_start">
            End time: <input type="text" name="time_end"></p>
            Location: <select class="location" name="location"></select>
            <p>Description:</p>
            <p><textarea name="description" rows=5 cols=50></textarea></p>
            <input type="submit" value="Add Event">
        </form>
    </div>

    <% include eventfeed.ejs %>

    <div id="subscribe_container">
        <h2>Subscribe</h2>
        <!-- <form id="form_subscribe" method = "post" action="/subscriptions/subscribe"> -->
        <span class="subscription">
            <form id="form_subscribe">
            Location: <select class="location" name="location"></select>
            Time Block: <select name="time">
                <option value=0>12AM - 6AM</option>
                <option value=1>6AM - 12PM</option>
                <option value=2>12PM - 6PM</option>
                <option value=3>6PM - 12AM</option></select>
            <input type="submit" value="Subscribe">
            </form>
        </span>
    </div>
    

</body>

</html>